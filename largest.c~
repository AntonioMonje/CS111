// The program will read 4 numbers (integers). It will display the larger of the 4 numbers.
#include <iostream>
using namespace std;

int main() 
{

  int n1, n2, n3, n4, largest;

  cout << "enter four different numbers" << endl;
  cin >> n1 >> n2 >> n3 >> n4;

  // solving for the largest
  
  if (n1 > n2)
  largest = n1;
  else 
  largest = n2;
  if (n3 > largest)
  largest = n3;
  if (n4 > largest)
  largest = n4;
  cout << largest << endl;  
  return 0;
}
  
